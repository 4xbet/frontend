---                            
import '../styles/global.css' 
import Header from '../components/Header.astro'
import background from '@/assets/background.svg';
---       


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="dark">
		<Header />
		<img class="absolute top-20 left-0 background-svg" id="background" src={background.src} alt="" fetchpriority="high" />
		<main class="mx-5">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.background-svg {
		width: 100vw;
	}
</style>
